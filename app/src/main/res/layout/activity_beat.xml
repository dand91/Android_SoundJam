    <Button
        android:id="@+id/SnareButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/hh1"
        android:layout_alignStart="@+id/hh1"
        android:layout_below="@+id/hh1"
        android:backgroundTint="#842525"
        android:text="snare" />

