        android:background="@drawable/cell_shape" />

    <ImageView
        android:id="@+id/hh3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/hh2"
        android:layout_toEndOf="@+id/hh2"
