        android:background="@drawable/cell_shape" />

    <ImageView
        android:id="@+id/sn2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/hh2"
        android:layout_alignStart="@+id/hh2"
