<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.AbstractDrumActivity">

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/removeButton"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/removeButton"
        android:layout_marginTop="114dp"
        android:text="Record" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/removeButton"
        android:layout_toLeftOf="@+id/removeButton"
        android:layout_toStartOf="@+id/removeButton"
        android:backgroundTint="#842525"
        android:text="PLAY" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playButton"
        android:layout_toEndOf="@+id/recordButton"
        android:layout_toRightOf="@+id/recordButton"
        android:backgroundTint="#842525"
        android:text="STOP" />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recordButton"
        android:focusable="true"
        android:indeterminate="false"
        android:max="100" />

    <TextView
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volumeSeekBar"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/soundListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soundListText"
        android:layout_centerHorizontal="true"
        android:text="remove" />

    <Button
        android:id="@+id/speedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/playButton"
        android:layout_alignStart="@+id/playButton"
        android:layout_below="@+id/playButton"
        android:text="SpeedShift" />

    <TextView
        android:id="@+id/speedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/speedButton"
        android:layout_alignBottom="@+id/speedButton"
        android:layout_toEndOf="@+id/speedButton"
        android:layout_toRightOf="@+id/speedButton" />

</RelativeLayout>
