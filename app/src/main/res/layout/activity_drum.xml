<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activity.BassdrumActivity"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/BarText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="Bar Size" />

    <EditText
        android:id="@+id/BarView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BarText"
        android:layout_centerHorizontal="true"
        android:ems="5"
        android:inputType="number"
        android:singleLine="true" />

    <Button
        android:id="@+id/recordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:text="Record" />

    <Button
        android:id="@+id/BarButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/BarView"
        android:layout_toEndOf="@+id/BarView"
        android:layout_toRightOf="@+id/BarView"
        android:text="Done"
        android:backgroundTint="#842525"
        />

    <Button
        android:id="@+id/playButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:layout_below="@+id/removeButton"
        android:layout_toLeftOf="@+id/removeButton"
        android:layout_toStartOf="@+id/removeButton"
        android:backgroundTint="#842525"
        />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/playButton"
        android:layout_toEndOf="@+id/recordButton"
        android:layout_toRightOf="@+id/recordButton"
        android:text="STOP"
        android:backgroundTint="#842525"
        />

    <SeekBar
        android:id="@+id/volumeSeekBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recordButton"
        android:focusable="true"
        android:indeterminate="false"
        android:max="100" />

    <EditText
        android:id="@+id/progressText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/volumeSeekBar"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/soundListText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressText"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/removeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/soundListText"
        android:layout_centerHorizontal="true"
        android:text="remove" />

</RelativeLayout>
