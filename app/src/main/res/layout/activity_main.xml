<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Activity.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bassdrum"
        android:id="@+id/exampleButton1"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Snare"
        android:id="@+id/exampleButton2"
        android:layout_below="@+id/exampleButton1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/groupNameText"
        android:layout_below="@+id/exampleButton2"
        android:layout_centerHorizontal="true"
        android:text="testGroup" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/groupNameButton"
        android:layout_below="@+id/groupNameText"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sinus"
        android:id="@+id/exampleButton3"
        android:layout_alignTop="@+id/exampleButton1"
        android:layout_toRightOf="@+id/exampleButton1"
        android:layout_toEndOf="@+id/exampleButton1" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bass"
        android:id="@+id/exampleButton4"
        android:layout_alignBaseline="@+id/exampleButton2"
        android:layout_alignBottom="@+id/exampleButton2"
        android:layout_toRightOf="@+id/exampleButton1"
        android:layout_toEndOf="@+id/exampleButton1" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BPMBar"
        android:max="130"
        android:indeterminate="false"
        android:focusable="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BPMText"
        android:layout_below="@+id/BPMBar"
        android:layout_centerHorizontal="true"
        android:text="BPM: 100" />

</RelativeLayout>
