<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".Activity.SnareActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bar Size"
        android:id="@+id/BarText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <EditText
        android:inputType="number"
        android:ems="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BarView"
        android:layout_below="@+id/BarText"
        android:layout_centerHorizontal="true"
        android:singleLine="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record"
        android:id="@+id/recordButton"
        android:layout_below="@+id/BarView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:id="@+id/BarButton"
        android:layout_alignBottom="@+id/BarView"
        android:layout_toRightOf="@+id/BarView"
        android:layout_toEndOf="@+id/BarView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dataView"
        android:layout_below="@+id/recordButton"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLAY"
        android:id="@+id/playButton"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/BarText"
        android:layout_toStartOf="@+id/BarText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="STOP"
        android:id="@+id/stopButton"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/dataView"
        android:layout_toEndOf="@+id/dataView" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/volumeSeekBar"
        android:max="100"
        android:indeterminate="false"
        android:focusable="true"
        android:layout_below="@+id/dataView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
